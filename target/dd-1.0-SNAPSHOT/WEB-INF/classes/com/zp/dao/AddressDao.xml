<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zp.dao.AddressDao">

    <resultMap id="addressMap" type="Address">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="local" property="local"/>
        <result column="zip_code" property="zipCode"/>
        <result column="phone" property="phone"/>
        <result column="user_id" property="userId"/>
    </resultMap>

    <select id="selectAllByUserId" resultMap="addressMap">
        select * from address where user_id = #{userId}
    </select>

    <select id="selectByLocal" resultMap="addressMap">
        select * from address where local = #{local}
    </select>

    <delete id="deleteById">
        delete from address where id = #{id}
    </delete>

    <insert id="insert">
        insert into address values(#{id},#{name},#{local},#{zipCode},#{phone},#{user_id})
    </insert>

    <update id="update">
        update address
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="local != null">
                local = #{local},
            </if>
            <if test="zip_code != null">
                zip_code = #{zipCode},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="userId != null">
                user_id = #{userId}
            </if>
        </set>
        where id = #{id}
    </update>



</mapper>
